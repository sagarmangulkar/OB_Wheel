<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Dating by : " />

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="LMP or EDD" />

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Sono" />

        </TableRow>

        <TableRow android:layout_marginTop="32dp">

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="(Date of)-" />

            <Button
                android:id="@+id/edit_text_date1"
                style="?background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="03-29-2017" />

            <Button
                android:id="@+id/edit_text_date1"
                style="?background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="03-29-2017"/>

        </TableRow>

        <TableRow android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="(Sono EGA)-" />

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:maxLines="10"
                android:text="Enter sono report-->" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/edit_text_date1"
                    style="?background"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:text="W"/>

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="W" />

                <Button
                    android:id="@+id/edit_text_date2"
                    style="?background"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:text="D"/>

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_width="35dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="D" />
            </LinearLayout>


        </TableRow>

        <TableRow android:layout_marginTop="32dp">

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="(EDD)-" />

            <Button
                android:id="@+id/edit_text_date1"
                style="?background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="03-29-2017"/>

            <Button
                android:id="@+id/edit_text_date1"
                style="?background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="03-29-2017"/>

        </TableRow>

        <TableRow android:layout_marginTop="32dp">

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="(EGA as of)-" />

            <Button
                android:id="@+id/edit_text_date1"
                style="?background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="03-29-2017"/>

            <Button
                android:id="@+id/edit_text_date1"
                style="?background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="03-29-2017"/>

        </TableRow>

        <TableRow android:layout_marginTop="32dp">

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="(Date of)-" />


            <LinearLayout android:layout_width="wrap_content">

                <Button
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:text="W"/>

                <TextView
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="W"/>

                <Button
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:text="D"/>

                <TextView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="D"/>

            </LinearLayout>

            <LinearLayout>

                <Button
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:text="W"/>

                <TextView
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="W"/>

                <Button
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:text="D"/>

                <TextView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="D"/>
            </LinearLayout>
        </TableRow>



    </TableLayout>

</LinearLayout>
